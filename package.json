{
    "name": "@wei_design/we-cli",
    "version": "0.2.0",
    "description": "we-cli, a node cli tool for wei_design",
    "main": "bin/we.js",
    "bin": {
        "we": "bin/we.js"
    },
    "files": [
        "bin",
        "packages",
        "template",
        "readme.md",
        "CHANGELOG.md"
    ],
    "scripts": {
        "commit": "cz",
        "lint": "eslint . --ext .js,.ts --fix --ignore-path .gitignore",
        "format": "prettier --write .",
        "clean:modules": "rimraf node_modules",
        "prepare": "husky install",
        "release": "release-it"
    },
    "keywords": [
        "@wei_design/we-cli",
        "wei_design",
        "we-cli",
        "forguo"
    ],
    "author": "forguo <wforguo@qq.com>",
    "license": "ISC",
    "homepage": "https://github.com/wei-design/we-cli#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/wei-design/we-cli.git"
    },
    "dependencies": {
        "chalk": "^4.1.2",
        "commander": "^11.0.0",
        "dayjs": "^1.11.9",
        "download-git-repo": "^3.0.2",
        "execa": "^5.1.1",
        "fs-extra": "^11.1.1",
        "handlebars": "^4.7.7",
        "husky": "^8.0.0",
        "inquirer": "^7.3.3",
        "log-symbols": "^4.0.0",
        "ora": "^5.4.1",
        "prettier": "^3.0.0",
        "update-notifier": "^4.1.3"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.6.6",
        "@commitlint/config-conventional": "^17.6.6",
        "@release-it/conventional-changelog": "^7.0.0",
        "eslint": "^8.45.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-prettier": "^5.0.0",
        "lint-staged": "^13.2.3",
        "release-it": "^16.1.2",
        "rimraf": "^5.0.1"
    },
    "config": {
        "commitizen": {
            "path": "cz-conventional-changelog"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,vue}": [
            "eslint --fix",
            "git add ."
        ]
    }
}
