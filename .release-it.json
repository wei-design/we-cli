{
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": "angular",
            "infile": "CHANGELOG.md"
        }
    },
    "git": {
        "commitMessage": "chore: release v${version}"
    },
    "github": {
        "release": true,
        "draft": false
    },
    "npm": {
        "publish": true
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    }
}
